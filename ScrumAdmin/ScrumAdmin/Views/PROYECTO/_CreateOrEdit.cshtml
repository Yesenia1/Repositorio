@model ScrumAdmin.Models.PROYECTO

@* This partial view defines form fields that will appear when creating and editing entities *@


<div class="editor-label">
    @Html.LabelFor(model => model.DESCRIPCION)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.DESCRIPCION)
    @Html.ValidationMessageFor(model => model.DESCRIPCION)
</div>

    @{
List<SelectListItem> num_semanas  = new List<SelectListItem>{
            new SelectListItem{ Text = "1", Value = "1", Selected = true},
            new SelectListItem{ Text = "2", Value = "2"},
            new SelectListItem{ Text = "3", Value = "3"},
            new SelectListItem{ Text = "4", Value = "4"},};
    }

<div class="editor-label">Número de semanas por Sprint</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.NUM_SPRINTS, num_semanas)
</div>


<div class="editor-label">
    @Html.LabelFor(model => model.NUM_RELEASES)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.NUM_RELEASES)
    @Html.ValidationMessageFor(model => model.NUM_RELEASES)
</div>


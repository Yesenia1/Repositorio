@model IEnumerable<ScrumAdmin.Models.PUNTOS_ESTIMACION>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            NOMBRE
        </th>
        <th>
            PUNTO
        </th>
        <th>
            USER_STORY
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.NOMBRE
        </td>
        <td>
			@item.PUNTO
        </td>
        <td>
			@(item.USER_STORY == null ? "None" : item.USER_STORY.Count.ToString())
        </td>
    </tr>
}

</table>



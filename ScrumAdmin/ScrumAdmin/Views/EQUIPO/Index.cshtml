@model IEnumerable<ScrumAdmin.Models.EQUIPO>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            IDUSUARIO
        </th>
        <th>
            IDROL
        </th>
        <th>
            IDPROYECTO
        </th>
        <th>
            PROYECTO
        </th>
        <th>
            ROL
        </th>
        <th>
            USUARIO
        </th>
        <th>
            USER_STORY
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
			@item.IDUSUARIO
        </td>
        <td>
			@item.IDROL
        </td>
        <td>
			@item.IDPROYECTO
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.PROYECTO).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.ROL).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.USUARIO).ToString()
        </td>
        <td>
			@(item.USER_STORY == null ? "None" : item.USER_STORY.Count.ToString())
        </td>
    </tr>
}

</table>



@model IEnumerable<ScrumAdmin.Models.USER_STORY>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            IDPUNTOSESTIM
        </th>
        <th>
            IDPRIORIDAD
        </th>
        <th>
            IDSPRINT
        </th>
        <th>
            IDESTADO
        </th>
        <th>

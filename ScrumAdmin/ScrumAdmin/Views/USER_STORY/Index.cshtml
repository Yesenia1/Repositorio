			@item.IDTIPO
        </td>
        <td>
			@item.NOMBRE
        </td>
        <td>
			@item.DURACION_PLANEADA
        </td>
        <td>
			@item.TIEMPO_GASTADO
        </td>
        <td>
			@item.TIEMPO_RESTANTE
        </td>
        <td>
			@item.PROPIETARIO
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.EQUIPO).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.ESTADO).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.PRIORIDAD).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.PUNTOS_ESTIMACION).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.SPRINT).ToString()
        </td>
        <td>
			@(item.TAREA == null ? "None" : item.TAREA.Count.ToString())
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.TIPO).ToString()
        </td>
    </tr>
}

</table>



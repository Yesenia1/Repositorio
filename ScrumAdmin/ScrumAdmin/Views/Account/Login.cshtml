@model ScrumAdmin.Models.USUARIO

@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

<section id="loginForm">
<h2>Utilice una cuenta local para iniciar sesión.</h2>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formulario de inicio de sesión</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.NICK)
                @Html.TextBoxFor(m => m.NICK)
                @Html.ValidationMessageFor(m => m.NICK)
            </li>
            <li>
                @Html.LabelFor(m => m.CONTRASENNIA)
                @Html.PasswordFor(m => m.CONTRASENNIA)
                @Html.ValidationMessageFor(m => m.CONTRASENNIA)
            </li>
            @*<li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </li>*@
        </ol>
        <input type="submit" value="Iniciar sesión" />
    </fieldset>
    <p>
        @Html.ActionLink("Regístrese", "Register") si no tiene ninguna cuenta.
    </p>
}
</section>

<section class="social" id="socialLoginForm">
    <h2>Usar otro servicio para iniciar sesión.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
